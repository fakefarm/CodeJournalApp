%h1 New Question
= form_for(@question) do |f|
  .field
    = f.label :question
    = f.text_field :question

  .field
    = f.label "User Story"
    = f.text_field :topic

  .field
    = f.label :project_id, "What project is this quesiton related to?"
    = f.collection_select :project_id, current_user.projects, :id, :name

  .actions
    = f.submit "Post Question"


= link_to "Back", questions_path