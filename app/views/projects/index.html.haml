%h1 Active
%table.table.table-hover
  %tr
    %th Name
    %th Summary
    %th Mentors
    %th Questions
    %th Goals
    %th Tasks
    %th Repo

    - @projects.each do |p|
      %tr
        %td= link_to p.name, p
        %td.muted= p.about
        %td= link_to (rand(10))
        %td= link_to (rand(10))
        %td= link_to (rand(10))
        %td= link_to (rand(10))
        %th
          .i.icon-file

